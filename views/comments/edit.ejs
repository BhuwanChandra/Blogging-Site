<% include ../partials/header %>

<div class="container">
    <div class="jumbotron">
        <h1 style="text-align:center;">Edit Comment</h1>
        <div style="width:40%; margin:30px auto;">
            <form action="/blogs/<%= blog._id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value='<%= comment.text%>' required>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/blogs/<%= blog_id %>">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>