<% include ../partials/header %>

<div class="container">
    <div class="jumbotron">
        <h1 style="text-align:center;">Add New Comment to <%= blog.name %></h1>
        <div style="width:40%; margin:30px auto;">
            <form action="/blogs/<%= blog._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/blogs/<%= blog._id %>">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>