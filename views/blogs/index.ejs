<% include ../partials/header %>

<div class="container">
    <header class="jumbotron rounded-0">
        <div class="container text-center">
            <h1>Welcome To Blogger.tech!</h1>
            <p class="font-weight-bold my-3">The Blog writing platform, where you can share your thoughts with others.</p>
            <p>
                <a class="btn btn-primary btn-lg rounded-0" href="/blogs/new">Start New Blog</a>
            </p>
        </div>
    </header>
    <div class="row" style="display:flex; flex-wrap:wrap;">
        <% if(blogs){ blogs.forEach(function(blog){ %>
        <div class="col-md-4 col-sm-6 mb-3 rounded-0">
            <div class="img-thumbnail">
                <img src="<%= blog.image %>" class="index-image" alt="" />
                <div class="caption mx-3 mt-2">
                    <h4><%= blog.title %></h4>
                </div>
                <div class="blog-intro m-3">
                    <%= blog.description.substring(0, 100) %> <span>....</span>
                </div>
                <p class="read-more">
                    <a href="/blogs/<%= blog.author.id %>/<%= blog._id %>" class="btn btn-primary rounded-0">Read More</a>
                </p>
            </div>
        </div>
        <% });}; %>
    </div>

</div>

<% include ../partials/footer %>