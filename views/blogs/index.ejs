<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome To Blogger.tech!</h1>
            <p>The Blog writing platform from the developers to the developers.</p>
            <p>
                <a class="btn btn-primary btn-large" href="/blogs/new">Start New Blog</a>
            </p>
        </div>
    </header>
    <div class="row" style="display:flex; flex-wrap:wrap;">
        <% if(blogs){ blogs.forEach(function(blog){ %>
        <div class="col-md-4 col-sm-6">
            <div class="img-thumbnail">
                <img src="<%= blog.image %>" alt="" />
                <div class="caption mx-3 mt-2">
                    <h4><%= blog.title %></h4>
                </div>
                <div class="blog-intro m-3">
                    <%= blog.description.substring(0, 100) %> <span>....</span>
                </div>
                <p>
                    <a href="/blogs/<%= blog._id %>" class="btn btn-primary mx-3 mb-2">Read More</a>
                </p>
            </div>
        </div>
        <% });}; %>
    </div>

</div>

<% include ../partials/footer %>