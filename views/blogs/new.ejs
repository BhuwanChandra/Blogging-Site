<% include ../partials/header %>

<div class="container">
    <div class="jumbotron">
        <h1 style="text-align:center;">Write A New Blog</h1>
        <div style="width:40%; margin:30px auto;">
            <form action="/blogs" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="title" placeholder="title of the blog" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="image url" required>
                </div>
                <div class="form-group">
                    <textarea class="form-control" type="text" rows="15" name="description"
                        placeholder="Start your blog here...." required></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/blogs">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>